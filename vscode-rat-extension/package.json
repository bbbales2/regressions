{
	"name": "lsp-sample",
	"description": "Rat language server",
	"license": "GPL3",
	"version": "1.0.0",
	"repository": {
		"type": "git",
		"url": "https://github.com/bbbales2/regressions"
	},
	"categories": [],
	"keywords": [
		"multi-root ready"
	],
	"engines": {
		"vscode": "^1.63.0"
	},
	"main": "./client/out/extension",
	"activationEvents": [
		"onLanguage:rat"
	],
	"contributes": {
		"languages": [
			{
				"id": "rat",
				"aliases": [
					"Rat",
					"rat"
				],
				"extensions": [
					".rat"
				]
			}
		],
		"grammars": [
			{
				"language": "rat",
				"scopeName": "source.rat",
				"path": "./syntaxes/rat.tmGrammar.json"
			}
		],
		"semanticTokenTypes": [
			{
				"id": "data",
				"description": "Data type."
			},
			{
				"id": "parameter",
				"description": "Parameter type."
			}
		],
		"semanticTokenScopes": [
			{
				"language": "rat",
				"scopes": {
					"data": [
						"string"
					],
					"data.secondary": [
						"support.variable"
					],
					"parameter": [
						"variable.parameter"
					],
					"parameter.secondary": [
						"variable.other.property"
					]
				}
			}
		],
		"configuration": {
			"type": "object",
			"title": "Example configuration",
			"properties": {
				"languageServerExample.maxNumberOfProblems": {
					"scope": "resource",
					"type": "number",
					"default": 100,
					"description": "Controls the maximum number of problems produced by the server."
				},
				"languageServerExample.trace.server": {
					"scope": "window",
					"type": "string",
					"enum": [
						"off",
						"messages",
						"verbose"
					],
					"default": "messages",
					"description": "Traces the communication between VS Code and the language server."
				}
			}
		}
	},
	"scripts": {
		"vscode:prepublish": "npm run compile",
		"compile": "tsc -b",
		"watch": "tsc -b -w",
		"lint": "eslint ./client/src --ext .ts,.tsx",
		"postinstall": "cd client && npm install && cd .."
	},
	"devDependencies": {
		"@types/mocha": "^9.1.0",
		"@types/node": "^14.17.0",
		"@typescript-eslint/eslint-plugin": "^5.13.0",
		"@typescript-eslint/parser": "^5.13.0",
		"eslint": "^8.10.0",
		"mocha": "^9.2.1",
		"typescript": "^4.6.2"
	},
	"dependencies": {
		"vsce": "^2.7.0"
	}
}
